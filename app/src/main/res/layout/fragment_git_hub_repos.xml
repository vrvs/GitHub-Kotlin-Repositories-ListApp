<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.github.vrvs.githubapp.uicomponent.loading.LoadingComponent
        android:id="@+id/loading_component"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:translationZ="90dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.github.vrvs.githubapp.uicomponent.error.ErrorComponent
        android:id="@+id/error_component"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:translationZ="180dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.github.vrvs.githubapp.uicomponent.repository.RepositoryListComponent
        android:id="@+id/repo_list_component"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</FrameLayout>